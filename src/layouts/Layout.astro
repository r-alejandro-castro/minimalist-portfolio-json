---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html {
		font-family: Menlo, Monaco, Lucida Console, 'Courier New', Courier, monospace;
		background-color: #fff;
		/* letter-spacing: -0.25rem;
        letter-spacing: normal; */
	}

	body,
	figure {
		margin: 0;
		padding: 0;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;	
	}

	*,*::before, *::after {
		box-sizing: border-box;
	}

	h1,h2,h3,h4 {
		margin: 0;
		font-family: roboto, space mono, monospace, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		/* letter-spacing: -0.02em; */
		font-size: 1.1rem;
	}

	p {
		color: #666666;
		font-size: 0.8rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
        letter-spacing: normal;
	}

	.print {
    display: none !important;
	white-space: pre-line;
  }

  @media print {
    /* Oculta elementos no deseados */
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    /* Evita que los artículos se corten */
    article {
      break-inside: avoid;
    }

    /* Elimina márgenes y paddings del body */
    body {
      padding: 0 !important;
      margin: 0 !important;
    }

    @page {
      margin-top: 20mm; 
      margin-bottom: 20mm; 
    }

    body::after {
      content: "";
      display: block;
      height: 20mm;
    }

    main > * {
      break-inside: avoid;
    }
  }


</style>
