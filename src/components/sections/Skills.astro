---
 import Section from "@/components/Section.astro"

 import {skills} from "@cv"
---
<Section title="Habilidades">

        <ul>
            {skills.map (({name}) => (
                    <li>
                        <span>{name}</span>
                    </li>
                ))
            }
        </ul>


</Section>

<style>
    section {
        padding: 0;
        margin: 0;
    }

    ul {
        display: inline-flex; 
        gap: 8px;
        padding: 0;
        margin: 0; 
        justify-content: flex-start;
        flex-wrap: wrap;
    }

    li {
        border-radius: 6px;
        background-color: #dfdfdf;
        color: #444;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }
</style>