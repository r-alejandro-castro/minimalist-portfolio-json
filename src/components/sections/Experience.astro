---
 import Section from "@/components/Section.astro"
 import { work } from "@cv"
---
<Section title="Experencia laboral"> 
    <ul>
        {work.map (({name, startDate, endDate, position, summary, highlights, skills}) => {

            const startYear = new Date(startDate).getFullYear()
            const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
            const years = `${startYear} - ${endYear}`

            const summaryArray = Array.isArray(summary) ? summary : [summary]

            const skillsArray = Array.isArray(skills) ? skills : [skills]

            return (
                <li>
                    <article>
                        <header>
                            <div class="job-info">
                                <div class="name-skills">
                                    <h3>{name}</h3>
                                    <div class="skills">
                                        {skillsArray.length > 0 ? skillsArray.map((skill) => (
                                            <span>{skill}</span>
                                        )) : null}
                                    </div>
                                </div>
                                <h4>{position}</h4>
                            </div>

                            <time>{years}</time>
                        </header>

                        <footer>                            
                            <ul>
                                {summaryArray.map((item, index) => (
                                    <li key={index}>
                                        <p>• {item}</p>
                                    </li>
                                ))}
                            </ul>
                        </footer>
                    </article>
                </li>
            )
        })}
    </ul>
</Section>

<style>

    ul {
        padding: 0;
        margin: 0;
        list-style-type: none;
        letter-spacing: normal;
    }

    li {
        margin-bottom: 24px; /* Añade un margen entre cada componente de experiencia */
    }

    article {
        padding: 0;
        margin: 0;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start; /* Alinea h3 y time desde la parte superior */
        padding: 0;
        margin: 0;
    }

    .job-info {
    display: flex;
    flex-direction: column;
    max-width: 100%;
        margin-top: 0;
    }

    .name-skills {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .job-info h3 {
        margin: 0;
        font-weight: 450;
        color: #111;
        line-height: 1.2;
        font-size: 1rem; /* Establece el tamaño de la fuente */
    }

    .skills {
        display: inline-flex;
        gap: 8px;
        padding: 0;
        margin: 0;
        flex-wrap: wrap;
        font-size: 0.75rem; /* Tamaño de fuente más pequeño */
    }

    .skills span {
        border-radius: 6px;
        background-color: #dfdfdf;
        color: #444;
        font-size: 0.70rem; /* Tamaño de fuente más pequeño */
        font-weight: 500;
        padding: 0.2rem 0.4rem;
    }

    .job-info h4 {
        margin: 6px 0 8px 0;
        font-weight: 390;
        color: #333;
        line-height: 1.2;
        font-size: 0.85rem;
    }

    h3 {
        margin: 0;
        font-weight: 450;
        color: #111;
        line-height: 1.2;
        font-size: 1rem; /* Establece el tamaño de la fuente */
    }

    h4 {
        margin: 6px 0 8px 0;
        font-weight: 390;
        color: #333;
        line-height: 1.2;
        font-size: 0.85rem;
    }

    time {
        color: #555;
        white-space: nowrap;
        text-align: right;
        margin-top: 0; /* Elimina cualquier margen superior */
        align-self: flex-start; /* Alinea el time con el inicio del contenedor, a la altura del h3 */
        font-family: roboto, space mono, monospace, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		/* letter-spacing: -0.02em; */
		font-size: 1rem;
    }

    p{
        margin: 0;
        line-height: 1.4;
        color: #555;
    }

</style>